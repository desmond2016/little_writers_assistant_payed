# 环境变量模板
# 复制此文件为 .env 并填入实际值

# ===========================================
# 应用基础配置
# ===========================================
FLASK_ENV=production
DEBUG=false

# 安全密钥 - 生产环境必须更改
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-string-change-in-production

# ===========================================
# 数据库配置
# ===========================================
# 是否使用Supabase (true/false)
USE_SUPABASE=true
MIGRATION_MODE=false

# SQLite数据库路径 (当USE_SUPABASE=false时使用)
DATABASE_URL=sqlite:///little_writers.db

# ===========================================
# Supabase配置
# ===========================================
# Supabase项目URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase匿名密钥
SUPABASE_ANON_KEY=your-anon-key

# Supabase服务密钥
SUPABASE_SERVICE_KEY=your-service-key

# ===========================================
# Claude API配置
# ===========================================
# Claude API密钥
CLAUDE_API_KEY=your-claude-api-key

# Claude API主机地址
CLAUDE_API_HOST=api.gptgod.online

# ===========================================
# 生产环境配置
# ===========================================
# 端口号 (Render会自动设置)
PORT=5001

# 工作进程数
WEB_CONCURRENCY=2
MAX_WORKERS=2

# 超时设置
TIMEOUT=30
KEEP_ALIVE=2

# Python优化
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ===========================================
# CORS配置
# ===========================================
# 允许的跨域来源 (用逗号分隔)
CORS_ORIGINS=*

# ===========================================
# 缓存配置
# ===========================================
# 缓存默认TTL (秒)
CACHE_DEFAULT_TTL=300

# 用户数据缓存TTL (秒)
USER_CACHE_TTL=600

# ===========================================
# 日志配置
# ===========================================
# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===========================================
# 性能监控
# ===========================================
# 慢查询阈值 (秒)
SLOW_QUERY_THRESHOLD=2.0

# API超时时间 (秒)
API_TIMEOUT=30
